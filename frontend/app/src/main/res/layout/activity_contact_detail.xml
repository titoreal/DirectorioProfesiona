<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContactDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/contact_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_contact_placeholder"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:background="@drawable/image_border" />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Name" />

        <TextView
            android:id="@+id/contact_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:text="Title" />

        <TextView
            android:id="@+id/contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Email" />

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Phone" />

        <TextView
            android:id="@+id/contact_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="Address" />

        <TextView
            android:id="@+id/contact_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:text="Status" />

        <Button
            android:id="@+id/btnEditContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar contacto"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAddNewContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar nuevo contacto"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnBackToList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver a la lista"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCloseApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar aplicaciÃ³n"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>